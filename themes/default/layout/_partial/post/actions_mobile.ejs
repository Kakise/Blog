<div id="footer-post-container">
    <div id="footer-post">

        <div id="nav-footer" style="display: none">
            <ul>
                <% for (var i in site.data.nav.nav) { %>
                    <li>
                        <a href="<%- site.data.nav.nav[i].url %>"><%= __('nav.' + site.data.nav.nav[i].link).replace("nav.", "") %></a>
                    </li>
                <% } %>
            </ul>
        </div>

        <div id="toc-footer" style="display: none">
            <%- toc(page.content) %>
        </div>

        <div id="share-footer" style="display: none">
            <%- partial('_partial/post/share', {icon_class_name: 'icon-lg'}) %>
        </div>
        <div id="actions-footer">
            <a id="menu" class="icon" href="#" onclick="$('#nav-footer').toggle();return false;"><i
                        class="fas icon-bars icon-lg" aria-hidden="true"></i> <%= __('post.mobile.menu') %></a>
            <a id="toc" class="icon" href="#" onclick="$('#toc-footer').toggle();return false;"><i
                        class="fas icon-list icon-lg" aria-hidden="true"></i> <%= __('post.mobile.toc') %></a>
            <a id="share" class="icon" href="#" onclick="$('#share-footer').toggle();return false;"><i
                        class="fas icon-share-alt icon-lg" aria-hidden="true"></i> <%= __('post.mobile.share') %></a>
            <a id="top" style="display:none" class="icon" href="#"
               onclick="$('html, body').animate({ scrollTop: 0 }, 'fast');"><i class="fas icon-chevron-up icon-lg"
                                                                               aria-hidden="true"></i> <%= __('post.mobile.back_to_top') %>
            </a>
        </div>

    </div>
</div>
