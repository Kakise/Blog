<% if (index) { %>
    <% if (post.link) { %>
        <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a> <i class="fas fa-comment"</i><span  data-disqus-url="<% config.url %><%- url_for(post.path) %>"</span>
    <% } else if (post.title) { %>
        <a class="<%= class_name %>" href="<%- url_for(post.path) %>"><%= post.title %></a> <i class="fas fa-comment"></i><span  data-disqus-url="<% config.url %><%- url_for(post.path) %>"</span>
    <% } else { %>
        <a class="<%= class_name %>" href="<%- url_for(post.path) %>">Untitled</a> <i class="fas fa-comment"></i><span  data-disqus-url="<% config.url %><%- url_for(post.path) %>"</span>
    <% } %>
<% } else { %>
    <h1 class="<%= class_name %>" itemprop="name headline">
        <%= post.title %>
    </h1>
<% } %>

